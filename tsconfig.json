{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "noEmit": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "skipLibCheck": true,
    "target": "es6"
  },
  "exclude": ["node_modules"],
  "include": ["./src/**/*"]
}
